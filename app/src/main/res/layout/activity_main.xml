<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wallet_orange"
    android:paddingTop="30dp"
    tools:context="com.example.big.zxingandroid.MainActivity">

    <com.ogaclejapan.smarttablayout.SmartTabLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/viewpagertab"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:stl_indicatorInFront="false"
        app:stl_indicatorGravity="bottom"
        app:stl_indicatorInterpolation="linear"
        app:stl_indicatorColor="#ffff"
        app:stl_indicatorThickness="6dp"
        app:stl_indicatorCornerRadius="2dp"
        app:stl_underlineColor="#00000000"
        app:stl_dividerColor="#00000000"
        app:stl_indicatorWidth="auto"
        app:stl_dividerThickness="1dp"
        app:stl_defaultTabTextColor="#FC000000"
        app:stl_distributeEvenly="true"/>
    <com.example.big.zxingandroid.CustomSwipeAbleViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/viewpagertab"
        />

</RelativeLayout>
